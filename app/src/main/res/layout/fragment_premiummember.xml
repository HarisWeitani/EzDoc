<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/premium_membership"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET PREMIUM MEMBERSHIP"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONLY 150 Million RUPIAH!"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_gravity="center"
        />

    <ImageButton
        android:id="@+id/premiumMembershipButton"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:background="@drawable/premium_membership_button"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="*price for 1 week membership"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        />
</LinearLayout>