<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:paddingBottom="50dp"
        >

        <ImageButton
            android:id="@+id/btnRumahSakitabc"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/rs1"
            />

        <ImageButton
            android:id="@+id/btnRumahSakitAlog"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/rs2"
            android:layout_marginTop="16dp"
            />

        <ImageButton
            android:id="@+id/btnRumahSakitHaris"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/rs3"
            android:layout_marginTop="16dp"
            />

        <ImageButton
            android:id="@+id/btnRumahSakitMele"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/rs4"
            android:layout_marginTop="16dp"
            />

        <ImageButton
            android:id="@+id/btnRumahSakitAHM"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@drawable/rs5"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>
</ScrollView>